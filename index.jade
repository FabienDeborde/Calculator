<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    
    title Calculator
    
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous")
    script(src="https://use.fontawesome.com/6af8722801.js")
    link(rel="stylesheet", href="main.css")
  body
    .container
      main
        .main-row.row.justify-content-center.align-items-center
          .main-wrapper
            .calc-row.result-row.justify-content-center.align-items-center
              .control-button.text-center(data-type="reset")#reset-container AC
              #result-container.text-right 8
            .calc-row.divide-row.justify-content-center.align-items-center.text-center
              .control-button(data-type="number" data-value="7") 7
              .control-button(data-type="number" data-value="8") 8
              .control-button(data-type="number" data-value="9") 9
              .control-button.operator(data-type="operator" data-value="divide") รท
            .calc-row.multiply-row.justify-content-center.align-items-center.text-center
              .control-button(data-type="number" data-value="4") 4
              .control-button(data-type="number" data-value="5") 5
              .control-button(data-type="number" data-value="6") 6
              .control-button.operator(data-type="operator" data-value="multiply") x
            .calc-row.substract-row.justify-content-center.align-items-center.text-center
              .control-button(data-type="number" data-value="1") 1
              .control-button(data-type="number" data-value="2") 2
              .control-button(data-type="number" data-value="3") 3
              .control-button.operator(data-type="operator" data-value="substract") -
            .calc-row.add-row.justify-content-center.align-items-center.text-center
              .control-button(data-type="number" data-value="0") 0
              .control-button .
              .control-button.operator(data-type="operator" data-value="equal") =
              .control-button.operator(data-type="operator" data-value="add") +

  script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous")
  script(src="main.js")
